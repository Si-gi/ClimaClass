{% include "base.html.twig" %}


{% block content %}

   {% for label, messages in app.flashes %}
       {% for message in messages %}
           <div class="bg-{{ label }}">
               {{ message }}
           </div>
       {% endfor %}
   {% endfor %}


       <div class="row">
           <div class="col-sm-12 blog-main">
               {% for label, messages in app.flashes %}
                   {% for message in messages %}
                       <div class="bg-{{ label }}">
                           {{ message }}
                       </div>
                   {% endfor %}
               {% endfor %}
               <form action="{{ path('search') }}" method="get" name="search">
                   <input type="text" name="state" placeholder="State" >
                   <input type="text" name="city" placeholder="City">
                   <input type="text" name="name" placeholder="School name">
                   <input type="text" name="latitude" placeholder="latitude">
                   <input type="text" name="longitude" placeholder="longitude">
                   <input type="submit" name="search_submit">
               </form>
           </div>
       </div>


           {% if schools is not null %}
               {% if success == false %}
                   <p>No results found</p>
               {% elseif success == true %}
                   <table class="table table-striped table-bordered table-hover" >
                       <thead>
                       <tr>
                           <th>State</th>
                           <th>City</th>
                           <th>School name</th>
                       </tr>
                       </thead>
                       <tbody>
                       {% for school in schools %}
                           <tr>
                               <td>{{ school['State'] }} </td>
                               <td>{{ school['city'] }}</td>
                               <td>{{ school['Name'] }}</td>
                               <td> <button class="btn btn-primary" onclick="showClass({{ school['id'] }})"><i  class="fa fa-save"></i></button></td>
                           {% for classroom in school['classrooms'] %}
                               <tr class="classroom-default class-{{ school['id'] }}">
                                   <td>{{classroom}}</td>
                                   <td>

                                       <a href="{{ path('class_message',{'receiver': classroom.id}) }}" id="{{ classroom.id }}">
                                           voir classe
                                       </a>
                                   </td>
                                   {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER') or is_granted('ROLE_SUPER_ADMIN')%}
                                   <td>
                                       <a href="" id="{{ classroom.getTeacher() }}">
                                           Contacter prof
                                       </a>
                                   </td>
                                   {% endif %}

                               </tr>
                           {% endfor %}
                       {% endfor %}
                       </tbody>
                   </table>
               {% endif %}
           {% endif %}



            {% endblock content %}
<style>
    .classroom-default{
        display: none;
    }
    .classroom-activ{
        display: block;
    }
</style>

<script>
    function showClass(id){
        let classrooms= $(".class-"+id);
        //let classrooms = document.getElementsByClassName("class-"+id);
        console.log(classrooms);
        for(let i = 0; i < classrooms.length; i++){
            console.log(classrooms[i])
            if( classrooms[i].classList.contains("classroom-default")){
                classrooms[i].classList.remove("classroom-default");
                classrooms[i].classList.add("classroom-activ");
            }else{

                classrooms[i].classList.remove("classroom-activ");
                classrooms[i].classList.add("classroom-default");
            }
        }
        }


</script>
