{% include "base.html.twig" %}
{% block content %}
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script type="text/css">
        #sidebar{
            position:fixed;
            left: 0;
            top: 0;
            bottom: 0;
            border-left: #4c5367;
        }
         div.scroll {
             background-color: #fed9ff;
             width: 600px;
             height: 150px;
             overflow-x: hidden;
             overflow-y: auto;
             text-align: center;
             padding: 20px;
         }
    </script>

    <div>
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:20%">
        <nav id="sidebar" >
            <ul class="list-group">
                {% for contact in list_contact %}
                    <li class="list-group-item">
                        <a href="{{ path("conversation" , {'contact': contact.idcontact.id }) }}" class="btn btn-warning">{{ contact.idContact }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>

    </div>
    <div>

    </div>
    <div class="w3-container messagerie"  style="margin-left:25%; color: black">
<div class="scroll">
    {% if messages is defined %}
        <ul style="list-style: none">
            {% for message in messages %}
                {% if message.sender == user %}
                    <li style="text-align: justify" class="mymessage"><p class="chat-me text-left"> <a href="">{{ user }}</a>:<br></p> <p style="margin: 8px">{{ message.content }}</p> </li>
                {% else %}
                    <li style="text-align: left;" class="othermessage">{{ contact }}||{{ message.content }}</li>
                {% endif %}
            {% endfor %}
        </ul>
    {% endif %}
</div>
        <div class="row">
            <div class="col-sm-12 blog-main">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% if form is defined %}
                    {{ form_start(form) }}
                    <div class="col-md-12">
                        <div class="form-group col-md-4">
                            {{ form_row(form.content) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_widget(form.submit) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    </div>

{% endblock %}