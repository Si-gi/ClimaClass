<form method="post" action="{{ path('public_message_delete', {'id': public_message.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ public_message.id) }}">
    <button class="btn">Delete</button>
</form>
