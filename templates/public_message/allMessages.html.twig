{% include "base.html.twig" %}

{% block body %}
    {% for message in messages %}
        <div class="container ">
            <div class="card tabPublication">
            <h3 class="card-title" style="text-align:center;"> <a href="{{ message.sender.id }}"> {{ message.sender }}</a> to <a href=""> {{ message.receiver }} </a></h3>

                <p>
                    {{ message.content }}
                </p>
                <br></br>
                <h6 class="card-subtitle mb-2 text-muted">{{ message.sendAt ? message.sendAt|date('Y-m-d') : '' }}</h6>
                <hr></hr>
            </div>
        </div>
    {% endfor %}

{% endblock %}


