                    border-radius:28px;
                    border:3px solid #18ab29;
                    display:inline-block;
                    cursor:pointer;
                    color:#ffffff;
                    font-family:Arial;
                    font-size:15px;
                    padding:12px 70px;
                    text-decoration:none;
                    text-shadow:0px 1px 0px #2f6627;
                }
                .btnclima:hover {
                    background:linear-gradient(to bottom, #5cbf2a 5%, #44c767 100%);
                    background-color:#5cbf2a;
                }
                .btnclima:active {
                    position:relative;
                    top:1px;
                }
                .releve_fond{
                    background-color: red !important;
                }
                }
                .mymessage{

                    border: #ffa500 ;
                    border-style: solid;
                    border-width: 1px;
                    border-radius: 5px;
                    margin-left:70%;
                    margin-top: 5px;
                    background-color:white;
                }
                .othermessage{
                    border: #b42f52 ;
                    border-style: solid;
                    border-width: 1px;
                    border-radius: 5px;
                    margin-right:70%;
                    margin-top: 5px;
                    background-color:white;
                }
                .messagerie{
                    background-color: #009688 !important
                }
                div.scroll {
                    height: 450px;
                    overflow-x: hidden;
                    overflow-y: auto;
                    text-align: center;
                    padding: 20px;
                }
