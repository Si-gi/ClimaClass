            <style>
                body{
                   }
                .titleH3{
                    text-align:center !important;
                    margin-top:90px !important;
                    font-weight: 700;
                    text-transform:uppercase !important;
                }
                /* Style the navigation bar */
                .navbar {
                width: 100%;
                background-color: green;
                overflow: auto;
                }
                /* Navbar links */
                .navbar a {
                float: left;
                text-align: center;
                padding: 12px;
                color: white;
                text-decoration: none;
                font-size: 17px;
                }
                .newbtn{
                 width: 180px;
                 height: 50px;
                 color: #fff !important;
                 margin-left: 10px;
                 text-transform: uppercase;
                 text-decoration: none;
                 background: #008000;
                 padding: 5px;
                 border-radius: 5px;
                 display: inline-block;
                 border: none;
                 transition: all 0.4s ease 0s;
               }
               .newbtn:hover{
                 background: #008000;
                 letter-spacing: 1px;
                 -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
                 -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
                 box-shadow: 5px 40px -10px rgba(0,0,0,0.57);
                 transition: all 0.4s ease 0s;
                 text-shadow: 0px 0px 6px rgba(255, 255, 255, 1);
               }
               .deletebtn{
                width: 180px;
                height: 50px;
                color: #fff !important;
                margin-left: 10px;
                text-transform: uppercase;
                text-decoration: none;
                background: #ff4d40;
                padding: 5px;
                border-radius: 5px;
                display: inline-block;
                border: none;
                transition: all 0.4s ease 0s;
              }
              .deletebtn:hover{
                background: #ff4d40;
                letter-spacing: 1px;
                -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
                -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
                box-shadow: 5px 40px -10px rgba(0,0,0,0.57);
                transition: all 0.4s ease 0s;
                text-shadow: 0px 0px 6px rgba(255, 255, 255, 1);
              }
                .tabPublication{
                  margin-bottom: 15px;
                  border-color: #008000;
                  border-width: 1.5px;
                  border-style: solid;
                  border-radius:8px;
                }
                /* Navbar links on mouse-over */
                .navbar a:hover {
                    border: 4px solid #4CAF52;
                    border-radius: 10px;
                }
                /* Current/active navbar link */
                .active {
                border: 4px solid #4CAF52;
                border-radius: 10px;
                }
                /* Add responsiveness - will automatically display the navbar vertically instead of horizontally on screens less than 500 pixels */
                @media screen and (max-width: 500px) {
                .navbar a {
                    float: none;
                    display: block;
                }
                }
                .navnav{
                    height: 76px !important;
                    color: green !important;
                }
                .navnav ul li a{
                    color: green !important;
                    font-size: 19px !important;
                    font-weight: bold !important;
                    text-align: right !important;
                }
                .fa-home{
                    font-size:40px !important;
                }
                .fa-address-card{
                    font-size:40px !important;
                }
                .fa-envelope{
                    font-size:40px !important;
                }
                .fa-thermometer-full{
                    font-size:40px !important;
                }
                .fa-user{
                    font-size:40px !important;
                }
                a{
                    color:black;
                }
                .titleclima{
                    color:black !important;
                }
                .home{
                    padding:100px;
                }
                .connexion{
                    padding:100px;
                    margin-left:auto !important;
                    margin-right:auto !important;
                }
                .formconnect{
                    width: 32%;
                    margin-left: auto;
                    margin-right: auto;
                    border: 5px solid green;
                    border-radius: 10px;
                    -webkit-box-shadow: 11px 13px 5px 0px rgba(209,240,225,0.77);
                    -moz-box-shadow: 11px 13px 5px 0px rgba(255,255,255,1);
                    box-shadow: 11px 13px 5px 0px rgba(255,255,255,1);
                    padding: 59px;
                }
                .btnsubmit{
                    width: 100% !important;
                }
                .homeTitle{
                    padding-top: 50px !important;
                    padding-bottom: 50px !important;
                    margin-top:auto !important;
                    margin-bottom:auto !important;
                    text-align:center !important;
                }
                .btnconnect{
                    list-style:none;
                }
                .barrenav{
                    background: white !important;
                    color: green !important;
                }
                .navulbarre{
                    margin-left: auto;
                    /* padding: 0px; */
                    margin-right: 64px !important;
                }
                .btnclima {
                    box-shadow: 0px 6px 0px 0px #3dc21b;
                    background:linear-gradient(to bottom, #44c767 5%, #5cbf2a 100%);
                    background-color:#44c767;
                    border-radius:28px;
                    border:3px solid #18ab29;
                    display:inline-block;
                    cursor:pointer;
                    color:#ffffff;
                    font-family:Arial;
                    font-size:15px;
                    padding:12px 70px;
                    text-decoration:none;
                    text-shadow:0px 1px 0px #2f6627;
                }
                .btnclima:hover {
                    background:linear-gradient(to bottom, #5cbf2a 5%, #44c767 100%);
                    background-color:#5cbf2a;
                }
                .btnclima:active {
                    position:relative;
                    top:1px;
                }
                .releve_fond{
                    background-color: red !important;
                }
            </style>
        {% endblock %}

